/ TODO don't pass :locals => { :order => @order } so much

= render :partial => @order
= render :partial => @order.address

- if @order.downloads.any?
  = render :partial => 'downloads/list', :locals => { :order => @order }

- if @order.donation
  = render :partial => @order.donation, :locals => { :order => @order }
- else
  = render :partial => @order.donation_methods, :locals => { :order => @order }

- if @order.shipment
  = render :partial => @order.shipment, :locals => { :order => @order }
- else
  = render :partial => 'shipments/pending', :locals => { :order => @order }