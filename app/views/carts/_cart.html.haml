%section[cart]
  %h1= t('.title')

  %table#cart
    %tbody
      - cart.items.each do |item|
        %tr
          %td= item.name
          %td= item.quantity
          %td= item.price

  = form_for Checkout::PayPal.new(cart), :url => checkout_pay_pal_path do |form|
    .buttons
      = form.submit
