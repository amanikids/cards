.card
  %h2= product.name
  = image_tag(product.image.path)
  = textilize(product.description)
  - form_for Item.new(:variant => product.variants.first) do |f|
    %ul
      - product.variants.each do |variant|
        .field
          = f.radio_button :variant_id, variant.id
          = f.label :variant_id, "#{variant.name} #{variant.price.exchange_to(current_currency)}", :for => [:item, :variant_id, variant.id].join('_')
    = f.submit 'Add to Cart'
