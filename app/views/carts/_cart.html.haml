%table.cart
  %tbody
    - cart.items.each do |item|
      %tr[item]
        %td= item.product_name
        %td= item.name
        %td= item.quantity
        %td= format_currency(item.price, cart.store.currency)
        %td= button_to(t('.remove'), [@store, item], :method => :delete)
  %tfoot
    %tr
      %td{:colspan => 3}= t('.total')
      %td= format_currency(cart.total, cart.store.currency)
      %td &nbsp;
