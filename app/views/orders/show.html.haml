= render :partial => 'orders/summary', :locals => { :order => @order }

- if @order.payment
  = render :partial => @order.payment, :locals => { :order => @order }
- else
  = render :partial => @order.payment_methods, :locals => { :order => @order }

- if @order.shipment
  = render :partial => @order.shipment, :locals => { :order => @order }
- else
  = render :partial => 'shipments/pending', :locals => { :order => @order }