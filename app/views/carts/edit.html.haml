- form_for current_cart, :url => current_cart_path do |f|
  %table
    %thead
      %tr
        %th
        %th
        %th Unit
        %th Qty
        %th Total
    %tbody
      - current_cart.items.each do |item|
        %tr
          - fields_for 'items[]', item do |fields|
            %td= item.product_name
            %td= item.variant.name
            %td= item.variant.price.exchange_to(current_currency)
            %td= fields.text_field :quantity
            %td= item.total.exchange_to(current_currency)
    %tfoot
      %tr
        %td
        %td
        %td
        %td
        %td= current_cart.total.exchange_to(current_currency)

  = f.submit 'Update Quantities'
