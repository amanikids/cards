%html{html_attrs}
  %head
    = stylesheet_link_tag('application')
  %body
    = render :partial => 'layouts/flash', :locals => { :flash => flash } unless flash.empty?

    .header
      = image_tag 'logo.jpg'
      = yield :header

    = render :partial => 'layouts/navigation' if current_user
    = yield
